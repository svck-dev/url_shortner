<%= form_with model: url, url: shortner_enterprise_urls_path, local: true, class: "space-y-6" do |form| %>
  <% if url.errors.any? %>
    <div class="mb-4">
      <h2 class="text-red-600">The following errors prevented the URL from being saved:</h2>
      <ul class="list-disc list-inside text-red-600">
        <% url.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <%= form.label :original, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :original, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :slug, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :slug, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="flex items-center justify-end">
    <%= form.submit "Create URL", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>